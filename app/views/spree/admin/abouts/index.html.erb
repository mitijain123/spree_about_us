<% content_for :page_title do %>
  <%= Spree.t(:listing_abouts) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_about), new_object_url, class: 'btn-success', icon: 'add', id: 'admin_new_about_link' %>
<% end if can?(:create, Spree::About) %>

<table class="table" id="listing_abouts" data-hook>
  <thead>
    <tr data-hook="admin_abouts_index_headers">
      <th><%= t(:title, scope: 'activerecord.attributes.spree/about') %></th>
      <th data-hook="admin_abouts_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @abouts.each do |about| %>
      <tr id="<%= spree_dom_id about %>" data-hook="admin_abouts_index_rows" class="<%= cycle('odd', 'even')%>">
        <td><%= link_to about.title, edit_object_url(about) %></td>
        <td data-hook="admin_abouts_index_row_actions" class="actions text-right">
          <%= link_to_edit about, no_text: true %>
          <%= link_to_delete about, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @abouts %>
